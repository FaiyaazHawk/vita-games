extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Games

    dl
      each game in game_list
        dt
          a(href=game.url) #{game.title}
        dd #{game.description}

      else
        p This genre has no games yet
  
  a(href=`${genre.url}/update`)
   button(type="button") Update Genre

  br
  a(href='/') Home Screen